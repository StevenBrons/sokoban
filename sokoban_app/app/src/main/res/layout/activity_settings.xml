<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/levelSelectBackgroundEven">

        <TextView
            android:gravity="center"
            android:id="@+id/toggleInputMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="50sp"
            android:fontFamily="@font/dtm_mono"
            android:textColor="@color/levelSelectBackgroundEven"
            android:background="@color/colorPrimaryDark"
            android:text="INPUT: swipe"
            android:onClick="onClickToggleControls"/>

        <TextView
            android:gravity="center"
            android:id="@+id/donutMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="50sp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/dtm_mono"
            android:textColor="@color/levelSelectBackgroundEven"
            android:background="@color/colorPrimaryDark"
            android:text="put 1000 more steps to unlock"
            android:onClick="onClickDonutMode"/>

        <TextView
            android:layout_marginTop="3dp"
            android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="50sp"
        android:fontFamily="@font/dtm_mono"
        android:textColor="@color/levelSelectBackgroundEven"
        android:background="@color/colorAccent"
        android:text="CLEAR DATA"
        android:onClick="onClickClearData"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>